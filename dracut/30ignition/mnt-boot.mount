[Unit]
Description=Ignition Boot Mount

# Make sure that the device exists
Requires=dev-disk-by\x2dlabel-boot.device
After=dev-disk-by\x2dlabel-boot.device

After=ignition-device-ready.service
After=sockets.target
After=sysroot.mount

After=systemd-udev-settle.service

# Shut down before switch-root
Conflicts=initrd-switch-root.service

[Mount]
What=/dev/disk/by-label/boot
Where=/mnt/boot
Options=ro
